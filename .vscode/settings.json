{
  "[css]": {
    "editor.formatOnSave": false
  },
  "[markdown]": {
    "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/",
    "cSpell.advanced.feature.useReferenceProviderWithRename": true,
    "cSpell.fixSpellingWithRenameProvider": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on"
  },
  "[typescriptreact,javascriptreact]": {
    "editor.tabSize": 2
  },
  "cSpell.customDictionaries": {
    "modulab": {
      "addWords": true,
      "name": "modulab",
      "path": "${workspaceFolder}/.cspell/modulab.txt",
      "scope": "workspace"
    },
    "openai": {
      "addWords": true,
      "name": "openai",
      "path": "${workspaceFolder}/.cspell/openai.txt",
      "scope": "workspace"
    }
  },
  "cSpell.files": [
    "**/*",
    "!data/repos/*.json",
    "!data/posts/*.md",
    "!components/repos/lang_colors.ts"
  ],
  "cSpell.ignoreRegExpList": ["CStyleComment"],
  "cSpell.words": [
    "authorable",
    "bloglovin",
    "clsx",
    "codepen",
    "cssnano",
    "cushman",
    "defaultlocale",
    "fontawesome",
    "fortawesome",
    "githubassets",
    "googlecalendar",
    "groupby",
    "headlessui",
    "maxage",
    "nextjs",
    "noto",
    "opengraph",
    "roboto",
    "signoff",
    "tailwindcss",
    "unoptimized"
  ],
  "css.lint.unknownAtRules": "ignore",
  "css.lint.vendorPrefix": "ignore",
  "explorer.incrementalNaming": "disabled",
  "tailwindCSS.validate": true
}
